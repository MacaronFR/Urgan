<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/secondary"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/close"
                    android:contentDescription="@string/close"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/close"
                    android:layout_marginHorizontal="@dimen/in_margin"
            />
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/close"
                    android:layout_height="match_parent"
                    android:background="@color/secondary"
                    android:minHeight="?attr/actionBarSize"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp"
                    app:title="Recherche"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_margin="@dimen/in_margin"
        app:layout_constraintTop_toBottomOf="@id/bar"
        android:hint="@string/search"
        android:background="@drawable/input"
        android:id="@+id/search"
        android:paddingStart="@dimen/input_padding"
        android:drawableEnd="@drawable/baseline_search_24"
    />
    <fr.imacaron.groupe19.urgan.views.UnderLineTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/search"
            app:layout_constraintTop_toBottomOf="@id/search"
            android:id="@+id/nb_res"
            android:layout_marginVertical="@dimen/in_margin"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/nb_res"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/list"
            android:layout_marginHorizontal="@dimen/in_margin"
            android:layout_marginTop="@dimen/in_margin"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    />
</androidx.constraintlayout.widget.ConstraintLayout>