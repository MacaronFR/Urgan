<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="96dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/in_margin"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/secondary"
>
    <fr.imacaron.groupe19.urgan.views.UnderLineTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/in_margin"
            android:id="@+id/name"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/in_margin"
            android:text="Coucou"
            android:id="@+id/stars"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/in_margin"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:id="@+id/review"
    />
</androidx.constraintlayout.widget.ConstraintLayout>